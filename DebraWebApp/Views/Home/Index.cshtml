@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <section class="hero">
                <h1>Welcome to Debra Event Management</h1>
                <p>Organize, manage, and sell tickets for your events seamlessly.</p>
                <a asp-controller="Partner" asp-action="Create" class="btn btn-light">Register as Partner</a>
                <a asp-controller="Partner" asp-action="login" class="btn btn-light">Partner Login</a>
                <a asp-action="AdminLogin" class="btn btn-light">Admin Login</a>
            </section>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <section class="features">
                <div class="row">
                    <div class="col-md-4">
                        <div class="feature">
                            <h3>Register as Partner</h3>
                            <p>Join our platform and start organizing events.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature">
                            <h3>Create New Events</h3>
                            <p>Add details of your upcoming events.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature">
                            <h3>Set Ticket Details</h3>
                            <p>Define ticket types and pricing.</p>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="feature">
                            <h3>Sell Tickets</h3>
                            <p>Manage ticket sales for your events.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature">
                            <h3>View Sales Status</h3>
                            <p>Track ticket sales and revenue.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature">
                            <h3>Admin Dashboard</h3>
                            <p>Manage commissions, partners, and events.</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

