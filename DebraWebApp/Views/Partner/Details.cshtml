@model DebraWebApp.Models.Partner

@{
    ViewData["Title"] = "Partner Details";
}

<div class="container">
    <h2 class="mt-4">@ViewData["Title"]</h2>

    <div class="card shadow-lg p-4 mb-5 bg-white rounded" style="max-width: 600px; margin: auto;">
        <div>
            <h4>Partner</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Partner ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.AddressNo, @Model.Street, @Model.City</dd>
            </dl>
        </div>

        <div class="text-center mt-3">
            <a class="btn btn-primary" href="javascript:history.go(-1)">Go Back</a>
        </div>
    </div>
</div>
