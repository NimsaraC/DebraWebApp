@model IEnumerable<DebraWebApp.Models.Event>

<h2>Events</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>PartnerId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate</td>
                <td>@item.Location</td>
                <td>@item.PartnerId</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Partner Actions">
                        <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-primary">Edit</a>
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this Ticket?')">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
