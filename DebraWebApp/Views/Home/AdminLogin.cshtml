@model DebraWebApp.Models.AdminLogin

@{
    ViewData["Title"] = "Admin Login";
}

<h2 class="text-center mt-4">@ViewData["Title"]</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded" style="width: 30rem;">
        <form asp-action="AdminLogin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group d-grid">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewBag.ErrorMessage
                </div>
            }
        </form>
    </div>
</div>
