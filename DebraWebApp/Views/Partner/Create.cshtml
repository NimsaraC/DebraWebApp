@model DebraWebApp.Models.Partner

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2 class="mb-4">Register New Partner</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control" required>
                            <div class="invalid-feedback">Please enter partner's name.</div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required>
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" required>
                            <div class="invalid-feedback">Please enter a password.</div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressNo" class="control-label">Address No</label>
                            <input asp-for="AddressNo" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Street" class="control-label">Street</label>
                            <input asp-for="Street" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="control-label">City</label>
                            <input asp-for="City" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a class="btn btn-secondary ml-2" asp-action="login">Login Partner Account</a>
                        <a class="btn btn-secondary ml-2" href="javascript:history.go(-2)">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript for form validation using Bootstrap's built-in validation styles
        (function () {
            'use strict';
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation');
            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
