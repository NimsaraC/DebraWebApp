@model DebraWebApp.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h2 class="text-center mt-4">@ViewData["Title"]</h2>

<div class="card shadow-lg p-4 mb-5 bg-white rounded" style="max-width: 600px; margin: auto;">
    <h4 class="card-title">Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Name
        </dt>
        <dd class="col-sm-9">
            @Model.EventName
        </dd>
        <dt class="col-sm-3">
            Date
        </dt>
        <dd class="col-sm-9">
            @Model.EventDate.ToString("MMMM dd, yyyy")
        </dd>
        <dt class="col-sm-3">
            Location
        </dt>
        <dd class="col-sm-9">
            @Model.Location
        </dd>
        <dt class="col-sm-3">
            Partner ID
        </dt>
        <dd class="col-sm-9">
            @Model.PartnerId
        </dd>
    </dl>
</div>

<div class="text-center mt-3">
    <a class="btn btn-primary" href="javascript:history.go(-1)">Go Back</a>
</div>
