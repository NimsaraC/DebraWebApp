@model IEnumerable<DebraWebApp.Models.Partner>

@{
    ViewData["Title"] = "Partners";
}

<div class="container">
    <h2>Partners</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Register New Partner</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var partner in Model)
            {
                <tr>
                    <td>@partner.Name</td>
                    <td>@partner.Email</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Partner Actions">
                            <a asp-action="Details" asp-route-id="@partner.Id" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@partner.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@partner.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this partner?')">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
